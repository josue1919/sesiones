{{> navbar}}
<div class="row">

    <div class="col-md-8 mx-auto">
        <a class="btn btn-success" href="/users/add">
            agrega usuario <i class="fas fa-user-plus m-1"></i>
        </a>
        <br />
        <br />
        <!--tabla empieza-->
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}

                <tr>
                    <th scope="row">{{_id}}</th>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>
                        <img src="/uploads/images/{{filename}}" alt="imagen usuario" class="userimg">
                    </td>
                    <td>
                        <div class="form-inline">
                            <div class="form-group p-1">
                                <form action="/users/delete/{{_id}}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">

                                    <button class="btn btn-danger" type="submit">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>

                            </div>
                            <div class="form-group p-1">
                                <a class="btn btn-warning" href="/users/edit/{{_id}}">
                                    {{!-- <i class="fas fa-user-edit"></i> --}}
                                    <i class="fas fa-edit"></i>

                                </a>

                            </div>
                        </div>
                    </td>
                </tr>
                {{else}}

                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center">Aun no hay usuarios registrados</h2>

                    </div>
                </div>
                <br />

                {{/each }}

            </tbody>
        </table>
    </div>
</div>